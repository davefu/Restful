{
	"name": "drahak/restful",
	"type": "library",
	"description": "Nette REST API bundle",
	"keywords": ["nette", "rest", "api", "drahak"],
	"homepage": "http://www.drahak.eu",
	"license": ["BSD-3-Clause", "GPL-2.0", "GPL-3.0"],
	"authors": [
		{
			"name": "Drahomír Hanák",
			"homepage": "http://www.drahak.eu"
		}
	],
	"config": {
		"vendor-dir": "libs"
	},
	"repositories": [
		{
			"type": "vcs",
			"url": "https://github.com/davefu/OAuth2"
		}
	],
	"require": {
		"php": ">= 5.6.0",
		"nette/application": "^2.4|~3.0",
		"nette/bootstrap": "^2.4|~3.0",
		"nette/caching": "^2.4|~3.0",
		"nette/deprecated": "^2.4|~3.0",
		"nette/di": "^2.4|~3.0",
		"nette/http": "^2.4|~3.0",
		"nette/reflection": "^2.4|~3.0",
		"nette/robot-loader": "^2.4|~3.0",
		"nette/security": "^2.4|~3.0",
		"nette/utils": "^2.4|~3.0",
		"latte/latte": "^2.4|~3.0"
	},
	"require-dev": {
		"drahak/oauth2": "2.4.x-dev",
		"nette/tester": "~2.0",
		"janmarek/mockista": "1.0.0",
		"php-parallel-lint/php-parallel-lint": "^1.2"
	},
	"autoload": {
		"psr-0": {
			"Drahak\\Restful": "src/"
		},
		"classmap": [
			"src/Drahak/Restful/exceptions.php",
			"src/Drahak/Restful/Application/exceptions.php",
			"src/Drahak/Restful/Mapping/exceptions.php",
			"src/Drahak/Restful/Security/exceptions.php",
			"src/Drahak/Restful/Validation/exceptions.php"
		]
	}
}
